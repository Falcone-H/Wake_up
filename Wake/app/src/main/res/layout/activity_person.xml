<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:weightSum="1">

    <Button
        android:id="@+id/edit_user_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_display"
        android:layout_marginTop="55dp"
        android:background="#FFFFFF"
        android:text="编辑患者资料" />

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#d3d3d3"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/img_main"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/home1" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_main"
                android:text="首页"
                android:textColor="#6699cc"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/img_music"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/img_music" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_music"
                android:gravity="center"
                android:text="音乐"
                android:textColor="#6699cc"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/img_analyze"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/img_analyze" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_analyze"
                android:gravity="center"
                android:text="分析"
                android:textColor="#6699cc"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/img_person"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/img_person" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_person"
                android:gravity="center"
                android:text="个人"
                android:textColor="#6699cc"
                android:textSize="18dp" />
        </RelativeLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/portrait2"
        android:layout_width="241dp"
        android:layout_height="186dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:paddingTop="25px"
        android:src="@mipmap/picture" />

    <TextView
        android:id="@+id/username_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portrait2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="用户名"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_user_button"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:text="关于" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_button"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:text="离开" />


</RelativeLayout>